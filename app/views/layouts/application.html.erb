<html>
<head>
  <title><%= yield(:title) || "Your App" %></title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsVQVWElqzrE4s6JME7ZZuxY4okz4GEI30dI95BqVKa" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>  
  <body>
    <!-- ヘッダー -->
    <header>
      <!-- ナビ -->
      <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top">
        <div class="container-fluid">
          <div class="navbar-brand">
            <%= link_to "Fukuoka View", blogs_path, class: "custom-text" %>
          </div>
      
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
      
          <div class="collapse navbar-collapse" id="navbarNav">
            <div class="navbar-nav ms-auto">
              <% if user_signed_in? %>
                <%= link_to new_user_session_path, class: "nav-link fs-6 fs-lg-5" do %>
                <i class="fa-regular fa-square-plus icon"><span class="small-text">post</span></i>
                <% end %>
                <%= link_to user_path, class: "nav-link fs-6 fs-lg-5" do %>
                  <i class="fa-solid fa-user icon"></i>Mypage
                <% end %>
                <%= link_to destroy_user_session_path, method: :delete, class: "nav-link fs-6 fs-lg-5" do %>
                  <i class="fa-solid fa-user-minus icon"></i>logout
                <% end %>
              <% else %>
                <%= link_to new_user_registration_path, class: "nav-link fs-6 fs-lg-5" do %>
                  <i class="fa-solid fa-user-plus icon"></i>new
                <% end %>
                <%= link_to new_user_session_path, class: "nav-link fs-6 fs-lg-5" do %>
                  <i class="fa-regular fa-user icon"></i> Login
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      </nav>
    
      <% if flash[:notice] %>
        <div class="alert alert-light alert-dismissible fade show fixed-top w-auto mt-5 py-2 d-flex align-items-center" role="alert" style="text-align: left;">
          <strong><%= flash[:notice] %></strong>
          <button type="button" class="btn-close fixed-top w-auto mt-5 py-2 d-flex align-items-center" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% elsif flash[:alert] %>
        <div class="alert alert-light alert-dismissible fade show fixed-top w-auto mt-5 py-2 d-flex align-items-center" role="alert" style="text-align: left;">
          <strong><%= flash[:alert] %></strong>
          <button type="button" class="btn-close fixed-top w-auto mt-5 py-2 d-flex align-items-center" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% end %>
    
   </header>
    


    <!-- メインコンテンツ -->
    <main>
      <%= yield %>
    </main>

    <!-- フッター -->
    <footer>
      <!-- フッターコンテンツ -->
    </footer>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-pzjw8L+3UVpL9/6GfCmTEo9Qz8VSx9W0oA84Xs2SbgYpi6E9p0cIl5KhKO5CgOJd" crossorigin="anonymous"></script>
  </body>
  </html>
