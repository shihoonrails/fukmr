<html>
<head>
  <title><%= yield(:title) || "Your App" %></title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsVQVWElqzrE4s6JME7ZZuxY4okz4GEI30dI95BqVKa" crossorigin="anonymous">

</head>
  <body>
    <!-- ヘッダー -->
    <header>
      <!-- ナビ -->
      <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top">
        <div class="container-fluid">
          <div class="navbar-brand">
            <%= link_to "Fukuoka View", uploads_path, class: "custom-text h3" %>
          </div>
    
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          
          <div class="collapse navbar-collapse" id="navbarNav">
            <div class="navbar-nav ms-auto">
              <% if user_signed_in? %>
                <%= link_to "NewPost", new_user_session_path, class: "nav-link fs-6 fs-lg-5" %>
                <%= link_to "MyPage", user_path, class: "nav-link fs-6 fs-lg-5" %>
                <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "nav-link fs-6 fs-lg-5" %>
              <% else %>
                <%= link_to "New SignUp", new_user_registration_path, class: "nav-link fs-6 fs-lg-5" %>
                <%= link_to "Login", new_user_session_path, class: "nav-link fs-6 fs-lg-5" %>
              <% end %>
            </div>
          </div>
        </div>
      </nav>
    
      <% if flash[:notice] %>
      <div class="alert alert-light alert-dismissible fade show fixed-top w-auto mt-5 py-2 d-flex align-items-center" role="alert" style="text-align: left;">
        <strong><%= flash[:notice] %></strong>
        <button type="button" class="btn-close fixed-top w-auto mt-5 py-2 d-flex align-items-center" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% elsif flash[:alert] %>
      <div class="alert alert-light alert-dismissible fade show fixed-top w-auto mt-5 py-2 d-flex align-items-center" role="alert" style="text-align: left;">
        <strong><%= flash[:alert] %></strong>
        <button type="button" class="btn-close fixed-top w-auto mt-5 py-2 d-flex align-items-center" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% end %>
    
   
    
    </header>
    

    <!-- メインコンテンツ -->
    <main>
      <%= yield %>
    </main>

    <!-- フッター -->
    <footer>
      <!-- フッターコンテンツ -->
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js" integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
</body>
</html>