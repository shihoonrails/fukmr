<!-- app/views/layouts/_error_messages.html.erb -->
<% if obj.errors.any? %>
  <div class="error">
    <h2><%= pluralize(obj.errors.count, "error") %> prohibited this <%= obj.class.name.underscore.humanize.downcase %> from being saved:</h2>

    <ul>
      <% obj.errors.full_messages.each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  </div>
<% end %>
