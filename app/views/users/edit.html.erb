<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Fukuoka view</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <%= stylesheet_link_tag 'user.edit', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>
<body>
  <main>
    <% if @user.errors.any? %>
        <div class="alert alert-danger" role="alert">
            <h4 class="alert-heading"><%= pluralize(@user.errors.count, "error") %></h4>
            <p><%= pluralize(@user.errors.count, "error") %> prohibited this object from being saved: not successfully</p>
            <hr>
            <p class="mb-0">
            <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
            </p>
        </div>
    <% end %>

    <div class="container">
      <div class="update-form">
        <h2>編集</h2>
        <%= form_for @user do |f| %>
          <div class="user-avatar" id="avatarLabel">
            <% if @user.avatar.attached? %>
              <%= image_tag @user.avatar, width: 200, class: "mb-2", id: "avatar_preview" %>
            <% else %>
                <%= image_tag "default_avatar.jpg", class: "mb-2 current-avatar", id: "avatar_preview" %>
            <% end %>
          </div>
          
          <%= f.file_field :avatar, id: "avatarInput", accept: "image/jpeg,image/gif,image/png", class: "mb-3", style: "display: none;" %>
          

          <div class="form-group">
            <label>ユーザー名</label>
            <%= f.text_field :name, class: "form-control" %>
          </div>
          <div class="form-group">
            <label>メールアドレス</label>
            <%= f.email_field :email, class: "form-control" %>
          </div>
          <div>
              <%= f.submit "更新", class: "btn btn-success" %>
          </div>
        <% end %>
      </div>
    </div>
  </main>

  <script>
    // 画像がクリックされたらフォーム要素をクリックする
    document.getElementById("avatarLabel").addEventListener("click", function() {
      document.getElementById("avatarInput").click();
    });
  
    document.getElementById("avatarInput").addEventListener("change", function() {
      var input = this;
      var preview = document.getElementById("avatar_preview");
  
      var reader = new FileReader();
      reader.onload = function(e) {
        preview.src = e.target.result;
      };
  
      reader.readAsDataURL(input.files[0]);
    });
  </script>
</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
</html>
