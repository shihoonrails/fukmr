<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Fukuoka view</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <%= stylesheet_link_tag 'uploads.form', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>

<%= form_with(model: upload) do |form| %>
  <% if upload.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(upload.errors.count, "error") %> prohibited this upload from being saved:</h2>

      <ul>
        <% upload.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="formrun">
    <div class="form-group mx-auto">
      <%= form.label :image, "Image", class: "col-sm-2 col-form-label col-form-label-sm", style: "display: block" %>
      <div class="col-sm-10">
        <%= form.file_field :image, class: "form-control form-control-sm", id: "colFormLabelSm", placeholder: "col-form-label-sm" %>
      </div>
    </div>
    
    <div class="form-group mx-auto">
      <%= form.label :title, "Title", class: "col-sm-2 col-form-label", style: "display: block" %>
      <div class="col-sm-10">
        <%= form.text_field :title, class: "form-control", id: "colFormLabel", placeholder: "お店の名前や行った場所を教えてください" %>
      </div>
    </div>

    <div class="form-group mx-auto">
      <%= form.label :body, "Body", class: "col-sm-2 col-form-label col-form-label-lg", style: "display: block" %>
      <div class="col-sm-10">
        <%= form.text_area :body, class: "form-control form-control-lg", id: "colFormLabelLg", placeholder: "おすすめポイント・説明" %>
      </div>
    </div>
  </div>
  

    <div class="post">
      <%= form.submit "Post", class: "btn btn-outline-dark" %>
    </div>
    
<% end %>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
</html>
