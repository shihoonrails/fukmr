<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Fukuoka view</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <%= stylesheet_link_tag 'registrations.new', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>
  
    <div class="container">
      <div class="registrations-form">
        <h2>New SignUp</h2>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'registrations-forms' }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <div class="mt-3 mb-3 <%= resource.errors.include?(:avatar) ? "validation_errors" : "" %>">
            <div class="flex-container">
                <div class="avatar-section">
                  <%= f.label :avatar, class: "form-label fw-bold" %>
                    <div class="user-avatar" id="avatarLabel">
                      <% if @user.avatar.attached? %>
                        <%= image_tag @user.avatar, width: 200, class: "mb-2", id: "avatar_preview" %>
                      <% else %>
                          <%= image_tag "default_avatar.jpg", class: "mb-2 current-avatar", id: "avatar_preview" %>
                      <% end %>
                    </div>
                    <%= f.file_field :avatar, id: "avatarInput", accept: "image/jpeg,image/gif,image/png", class: "mb-3", style: "display: none;" %>
                </div>
                <div class="field">
                  <%= f.label :name, "お名前" %><br />
                  <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
                </div>
              </div>
              <div class="field">
                <%= f.label :email, "メールアドレス" %><br />
                <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
              </div>
              <div class="field">
                <%= f.label :password, "パスワード" %>
                <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> 文字以上)</em>
                <% end %><br />
                <%= f.password_field :password, autocomplete: "new-password" %>
              </div>
              <div class="field">
                <%= f.label :password_confirmation, "パスワード(確認)" %><br />
                <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
              </div>
            <div class="actions">
              <%= f.submit "新規ユーザー登録" %>
            </div>
          </div>
        <% end %>
        <div class="loginpage">
            <p>※既にお済みの方はログインへ</p>
          <div class="actions">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>

<script>
  // 画像がクリックされたらフォーム要素をクリックする
  document.getElementById("avatarLabel").addEventListener("click", function() {
    document.getElementById("avatarInput").click();
  });

  document.getElementById("avatarInput").addEventListener("change", function() {
    var input = this;
    var preview = document.getElementById("avatar_preview");

    var reader = new FileReader();
    reader.onload = function(e) {
      preview.src = e.target.result;
    };

    reader.readAsDataURL(input.files[0]);
  });
</script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
</html>
